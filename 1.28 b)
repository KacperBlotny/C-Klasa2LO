#include <iostream>
#include <cmath>

using namespace std;

    int main()

{

cout << "\n\nPODPUNKT B \n";

        char a;
        a = '*';

    for (int i=1 ;i<=10 ;i++)

    {
        for (int j=1; j<=i ;j++)

        cout << a;


        if (i%2 == 0) cout << " ^ ^ ";
            else if (i%2 == 1) cout << " & & ";

    }




return 0;
}
