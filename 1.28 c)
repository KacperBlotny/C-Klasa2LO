#include <iostream>
#include <cmath>

using namespace std;

    int main()

{



cout << "\n\nPODPUNKT C \n";

        int i;

        char a, b;
        a = '|';
        b = '-';

        for (i=1; i<=5; i++)

        {

        cout << "*";

        for (int j=1; j<=i; j++)

            {


            if (i%2==0) cout << b;
                else if (i%2 != 0 ) cout << a;

            }

        }





  return 0;
}
