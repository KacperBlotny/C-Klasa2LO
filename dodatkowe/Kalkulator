#include <iostream>
#include <cmath>

using namespace std;

    int main()

{
    int a, b, x;


    cout << "\n\nKALKULATOR" <<endl;

        cout << "1 - dodawanie" <<endl;
        cout << "2 - odejmowanie" <<endl;
        cout << "3 - mnozenie" <<endl;
        cout << "4 - dzielenie" <<endl;
        cout << "5 - pierwiastek(2st)" <<endl;
        cout << "6 - VAT" <<endl;
        cout << "\n\n" <<endl;

    while(x!=0)
    {
        cin >> x;

        if (x==0) break;

        switch(x)
        {
            case 1: cin >> a >> b;
                    cout << a+b <<endl; break;

            case 2: cin >> a >> b;
                    cout << a-b <<endl; break;

            case 3: cin >> a >> b;
                    cout << a*b <<endl; break;

            case 4: cin >> a >> b;
                    cout << a/b <<endl; break;

            case 5: cin >> a;
                    cout << sqrt(a) <<endl; break;

            case 6: cin >> a;
                    cout << a/1.23 <<endl; break;




        }
    }







return 0;
}
