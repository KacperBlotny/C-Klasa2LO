int fa(int n)
{
    int w;

    if(n==1) return 1;
    w = fa(n-1)+3;
    cout << w << " ";
    return w;
}

int fb(int u)
{
    int e;

    if(u==1) return 1;
    e = fb(u-1)*2;
    cout << e << " ";
    return e;
}

float fc(float i)
{
    float r;

    if(i==1) return -0.06666667;
    r = fc(i-1) *3 *(-1);
    cout << r << " ";
    return r;
}

float fd(float o)
{
    float t;

    if(o==1) return 20;
    t = fd(o-1) /2 *(-1);
    cout << t << " ";
    return t;
}

int fe(int p)
{
    int y;

    if(p==1) return 4;
    if(p%2==0) y = fe(p-1) -1;
    if(p%2!=0) y = fe(p-1) +2;
    cout << y << " ";
    return y;
}

float ff(float f)
{
    float g;
    float m = 0.5;

    if(f==1) return 2;
    g = ff(f-1) -m;
    if(f <= 0.5) g = ff(f-1) -(2*m);
    //else if(f > 1) g = ff(f-1) -m;



    if(g==0) cout << "";
    else
    cout << g << " ";
    return g;

}

long double fg(int g)
{
    int p;

    if(g==1) return -3;
    p = fg(g-1)*fg(g-2);

    cout << p-1 << " ";
    return p-1;
}



